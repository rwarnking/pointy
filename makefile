#-------------------------------------------------------------------------
# NMAKE-Makefile
#-------------------------------------------------------------------------

PROJECT=pointy
CC=g++
RM=del

#-------------------------------------------------------------------------
# Compiler-Flags
#-------------------------------------------------------------------------

CFLAGS=-o

#-------------------------------------------------------------------------
# Main-Targets
#-------------------------------------------------------------------------

all: $(PROJECT).exe
	@echo.
	@echo Successfully compiled $(PROJECT)

clean:
	$(RM) $(PROJECT).exe

#-------------------------------------------------------------------------
# Sub-Targets
#-------------------------------------------------------------------------

$(PROJECT).exe:
	$(CC) $(CFLAGS) $(PROJECT) header/color.h header/bitmap.h header/problem.h source/problem.cpp source/pointy.cpp