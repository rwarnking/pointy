#-------------------------------------------------------------------------
# NMAKE-Makefile
#-------------------------------------------------------------------------

GEN=generator
HEADER=header/*.h
SOURCE=source/*.cpp

CC=g++
RM=del
EXE=exe

#-------------------------------------------------------------------------
# Compiler-Flags
#-------------------------------------------------------------------------

CFLAGS=-o

#-------------------------------------------------------------------------
# Main-Targets
#-------------------------------------------------------------------------

$(GEN): $(GEN).$(EXE)
	@echo Successfully compiled $(GEN)

clean:
	$(RM) $(GEN).$(EXE)

#-------------------------------------------------------------------------
# Sub-Targets
#-------------------------------------------------------------------------

$(GEN).$(EXE):
	$(CC) $(CFLAGS) $(GEN) $(HEADER) $(SOURCE)