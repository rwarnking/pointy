#-------------------------------------------------------------------------
# NMAKE-Makefile
#-------------------------------------------------------------------------

PROJECT=pointy
HEADER=header/*.h
SOURCE=source/*.cpp

CC=g++
RM=del
EXE=exe

#-------------------------------------------------------------------------
# Compiler-Flags
#-------------------------------------------------------------------------

CFLAGS=-o

#-------------------------------------------------------------------------
# Main-Targets
#-------------------------------------------------------------------------

$(PROJECT): clean $(PROJECT).$(EXE)
	@echo Successfully compiled $(PROJECT)

clean:
	@IF EXIST $(PROJECT).$(EXE) $(RM) $(PROJECT).$(EXE)

#-------------------------------------------------------------------------
# Sub-Targets
#-------------------------------------------------------------------------

$(PROJECT).$(EXE):
	@$(CC) $(CFLAGS) $(PROJECT) $(HEADER) $(SOURCE)