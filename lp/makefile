#-------------------------------------------------------------------------
# Makefile
#-------------------------------------------------------------------------

PROJECT=lp_solver
HEADER=header/*.h
SOURCE=source/*.cpp

CC=g++
RM=del
EXE=exe

#-------------------------------------------------------------------------
# Compiler-Flags
#
#-------------------------------------------------------------------------

CFLAGS=-O2 -o
LINK=-L C:/SCIP/lib -lscip

#-------------------------------------------------------------------------
# Main-Targets
#-------------------------------------------------------------------------

$(PROJECT): clean $(PROJECT).$(EXE)
	@echo Successfully compiled $(PROJECT)

debug: clean
	@$(CC) -g $(CFLAGS) $(PROJECT) $(HEADER) $(SOURCE) $(LINK)

clean:
	@IF EXIST $(PROJECT).$(EXE) $(RM) $(PROJECT).$(EXE)

#-------------------------------------------------------------------------
# Sub-Targets
#-------------------------------------------------------------------------

$(PROJECT).$(EXE):
	@$(CC) $(CFLAGS) $(PROJECT) $(HEADER) $(SOURCE) $(LINK)